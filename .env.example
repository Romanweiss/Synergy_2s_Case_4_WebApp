# ==========================================
# Environment variables for Case_4_WebApp
# ==========================================

# PostgreSQL connection (для локального запуска вне Docker)
DATABASE_URL=postgresql+psycopg://tourism:tourism@localhost:5432/tourism

# PostgreSQL connection (для Docker Compose — внутри сети контейнеров)
# Используется сервисное имя "db" из docker-compose.yml
DOCKER_DATABASE_URL=postgresql+psycopg://tourism:tourism@db:5432/tourism

# Приложение
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=development

# Логирование
LOG_LEVEL=info
